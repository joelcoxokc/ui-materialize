.mz-collection
    min-width 100%
    max-width 100%
    width 100%
    float left
    position relative
    list-style none
    border none
    background none
    background-color none


.mz-collection-item
    width 100%
    min-height 48px

    overflow hidden
    background-color white
    box-shadow(0 2px 4px rgba(0,0,0,.2))
    flex-container()
    flex-direction(column)

    .mz-collection-item-heading
        width 100%
        height 48px
        max-height 48px
        min-height 48px
        border-bottom 1px solid lightgrey
        cursor pointer
        position relative
        flex-container()
        flex-direction(row)
        .mz-collection-item-heading-left
            flex-element(0 0 8.33333%)
            flex-container()
            flex-direction(row)
            justify-content(center)
            align-items(center)
            font-size 2rem
            .icon-circle-user
                border-radius(100%)
                width 28px
                height 28px
                font-size 1.2rem
                text-align center
        .mz-collection-item-heading-title
            flex-element(0 0 25%)
            flex-container()
            flex-direction(row)
            justify-content(flex-start)
            align-items(center)
        .mz-collection-item-heading-middle
            // width 58.33333%
            flex-element(0 0 58.33333%)
            flex-container()
            flex-direction(row)
            justify-content(flex-start)
            align-items(center)
        .mz-collection-item-heading-right
            position absolute
            z-index 10
            right 0
            top 0
            min-height 46px
            max-height 46px
            width 200px
            display none
            text-align center
            justify-content(center)
            align-items(center)

            i
                flex-element(1 0 auto)
                line-height 46px
                font-size 1.5rem
                color #dddddd
                margin 0 10px

                &:hover
                    color grey

    &:hover
        .mz-collection-item-heading-right
            display block

            flex-container()


    .mz-collection-item-content
        width 100%
        max-width 100%
        min-width 100%
        height 100%
        max-height 100%
        min-height 100%
        position relative
        display none
        padding 20px
        vertical-scroll()











